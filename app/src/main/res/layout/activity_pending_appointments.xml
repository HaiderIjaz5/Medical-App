<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <!-- Heading Text -->
    <TextView
        android:id="@+id/tvPendingAppointmentsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Appointments"
        android:textSize="24sp"
        android:textColor="#0288D1"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Container with border and white background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="4dp">

    <ListView
        android:id="@+id/pendingAppointmentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#B3E5FC"
        android:dividerHeight="1dp"/>

    <!-- ProgressBar centered over the ListView -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#0288D1" />
</FrameLayout>

    </LinearLayout>
