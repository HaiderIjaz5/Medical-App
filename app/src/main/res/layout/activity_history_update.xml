<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintWidth_max="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prescription"
                android:textStyle="bold"
                android:textColor="#0288D1"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:hint="Enter prescription"
                android:textColor="#0288D1"
                android:textColorHint="#90CAF9"
                android:backgroundTint="#0288D1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disease"
                android:textStyle="bold"
                android:textColor="#0288D1"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etDisease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:inputType="textMultiLine"
                android:hint="Enter disease"
                android:textColor="#0288D1"
                android:textColorHint="#90CAF9"
                android:backgroundTint="#0288D1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textStyle="bold"
                android:textColor="#0288D1"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:hint="Enter progress"
                android:textColor="#0288D1"
                android:textColorHint="#90CAF9"
                android:backgroundTint="#0288D1"/>

            <!-- Status notice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This appointment will be marked as Completed"
                android:textColor="#FF5722"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnSaveHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0288D1"
                android:layout_marginTop="24dp"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
